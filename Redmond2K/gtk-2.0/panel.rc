#############################################################
# Whisker Menu & Application Menu
#############################################################

style "whiskerbutton"
{
	xthickness = 0
	ythickness = 0
	GtkWidget::focus_padding = 1

	engine "pixmap" 
	{
		image
		{
			function = BOX
			detail = "buttondefault"
			file = "null.png"
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			state = NORMAL
			file = "null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
		{
			function = BOX
			shadow = OUT
			recolorable = TRUE
			state = PRELIGHT
			file = "null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			shadow = IN
			state = PRELIGHT
			file = "null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			state = ACTIVE
			file = "null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			state = INSENSITIVE
			file = "null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}

		image
		{
			function = BOX
			recolorable = TRUE
			state = SELECTED
			file = "null.png"
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}
	}
}

widget "*applicationmenu-button"		style "whiskerbutton" #for the application menu button.
widget "*whiskermenu-button"		style "whiskerbutton" #for Whisker menu button.
